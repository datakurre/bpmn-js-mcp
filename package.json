{
  "name": "bpmn-js-mcp",
  "version": "1.0.0",
  "description": "MCP server for creating and manipulating BPMN diagrams using bpmn-js",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node16 --format=cjs --outfile=dist/index.js --external:jsdom --external:bpmn-js --external:bpmn-auto-layout --external:elkjs --external:bpmnlint --external:bpmnlint-plugin-camunda-compat --banner:js='#!/usr/bin/env node'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "watch": "npm run build -- --watch",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "bpmn",
    "bpmn-js",
    "workflow",
    "diagram"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/bpmn-moddle": "^9.0.0",
    "bpmn-auto-layout": "^1.2.0",
    "bpmn-js": "^18.8.0",
    "bpmnlint": "^11.10.0",
    "bpmnlint-plugin-camunda-compat": "^2.47.0",
    "camunda-bpmn-moddle": "^7.0.1",
    "elkjs": "^0.11.0",
    "jsdom": "^25.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.7",
    "eslint-plugin-unicorn": "^63.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "bin": {
    "bpmn-js-mcp": "./dist/index.js"
  }
}
